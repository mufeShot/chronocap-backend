generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  id           Int       @id @default(autoincrement())
  name         String?
  refreshToken String?   @unique
  capsules     Capsule[]
  emailVerifiedAt DateTime?
  mailLogs     MailLog[]
}

model Capsule {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isPublic  Boolean  @default(false)
  unlockAt  DateTime
  images    String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum MailType {
  EMAIL_VERIFICATION
}

enum MailStatus {
  PENDING
  SENT
  RECEIVED
  DELIVERED
  FAILED
  CONFIRMED
}

model MailLog {
  id               Int        @id @default(autoincrement())
  userId           Int
  type             MailType
  status           MailStatus @default(PENDING)
  providerMessageId String?   @unique
  token            String?    @unique
  attempts         Int        @default(0)
  lastError        String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId, type])
  @@index([status])
}
